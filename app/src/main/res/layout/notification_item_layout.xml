<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notification_item_prism_profile_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/notification_item_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/notification_item_prism_profile_image_view"
        android:layout_marginStart="8dp"
        android:text="mikechoch and 9 others"
        android:textColor="@android:color/white"/>

</RelativeLayout>